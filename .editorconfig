# Unity C# Code Style Settings
root = true

[*.cs]
# Indentation
indent_style = space
indent_size = 4
tab_width = 4

# New line preferences
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Null-checking preferences
csharp_style_conditional_delegate_call = true:suggestion

# Code quality analyzers
dotnet_diagnostic.IDE0008.severity = warning  # Use explicit type
dotnet_diagnostic.CA1822.severity = suggestion  # Methods that could be static
dotnet_diagnostic.IDE0060.severity = suggestion  # Unused parameters
dotnet_diagnostic.CA1062.severity = suggestion  # Validate arguments of public methods
dotnet_diagnostic.CA1031.severity = suggestion  # Do not catch general exception types
dotnet_diagnostic.CA1303.severity = none  # Do not pass literals as localized parameters

# Unity-specific suppressions
dotnet_diagnostic.IDE0051.severity = none  # Remove unused private members (Unity messages)
dotnet_diagnostic.IDE0044.severity = none  # Add readonly modifier (Unity serialized fields)

# Naming conventions
# Private fields: _camelCase
dotnet_naming_rule.private_fields_rule.severity = suggestion
dotnet_naming_rule.private_fields_rule.symbols = private_fields
dotnet_naming_rule.private_fields_rule.style = underscore_prefix

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.underscore_prefix.required_prefix = _
dotnet_naming_style.underscore_prefix.capitalization = camel_case

# Public/Protected fields: PascalCase (Unity serialized fields)
dotnet_naming_rule.public_fields_rule.severity = suggestion
dotnet_naming_rule.public_fields_rule.symbols = public_fields
dotnet_naming_rule.public_fields_rule.style = pascal_case

dotnet_naming_symbols.public_fields.applicable_kinds = field
dotnet_naming_symbols.public_fields.applicable_accessibilities = public,protected

dotnet_naming_style.pascal_case.capitalization = pascal_case

# Constants: PascalCase
dotnet_naming_rule.constants_rule.severity = warning
dotnet_naming_rule.constants_rule.symbols = constants
dotnet_naming_rule.constants_rule.style = pascal_case

dotnet_naming_symbols.constants.applicable_kinds = field
dotnet_naming_symbols.constants.required_modifiers = const
